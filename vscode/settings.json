{
  // Vim Config
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    {
      "before": ["<leader>", "w"],
      "commands": [":w"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": [":q"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": [":sp"]
    },
    {
      "before": ["<leader>", "v"],
      "commands": [":vsp"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["eslint.executeAutofix"]
    },
    {
      "before": ["<leader>", "p"],
      "commands": ["prettier.forceFormatDocument"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "a"],
      "commands": [":terminal"]
    },

    {
      "before": ["<leader>", "c"],
      "commands": ["editor.action.addCommentLine"]
    },
    {
      "before": ["<leader>", "i"],
      "commands": ["editor.action.removeCommentLine"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  // VScode Config
  "files.associations": {
    "*.jsx": "javascriptreact",
    "*.md": "markdown",
    "*.mdx": "markdown"
  },
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.bracketPairColorization.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.cursorSmoothCaretAnimation": true,
  "workbench.layoutControl.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "window.menuBarVisibility": "toggle",
  "terminal.integrated.fontSize": 13,
  "editor.cursorBlinking": "phase",
  "explorer.confirmDelete": false,
  "window.commandCenter": true,
  "terminal.integrated.fontFamily": "MonoLisa",
  "workbench.iconTheme": "bearded-icons",
  "editor.fontFamily": "MonoLisa",
  "editor.fontLigatures": true,
  "editor.fontWeight": "normal",
  "editor.lineHeight": 2.3,
  "editor.tabSize": 2,
  "editor.stickyScroll.enabled": true,
  "editor.fontSize": 12,
  "security.workspace.trust.untrustedFiles": "open",
  "reactSnippets.settings.importReactOnTop": false,
  "workbench.activityBar.visible": false,
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "OM Theme (Default Dracula Italic)"
}